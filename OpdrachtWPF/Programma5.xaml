        <Label Content="breedte balk" HorizontalAlignment="Left" Margin="230,96,0,0" VerticalAlignment="Top"/>
        <Label Content="hoogte balk" HorizontalAlignment="Left" Margin="230,140,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.627,3.423"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="354,50,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" x:Name="txt_lengte"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="354,96,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" x:Name="txt_breedte"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="354,140,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" x:Name="txt_hoogte"/>
