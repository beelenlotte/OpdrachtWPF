            <ComboBoxItem>8 mm</ComboBoxItem>
            <ComboBoxItem Content="12 mm" HorizontalAlignment="Left" Width="118"/>
            <ComboBoxItem Content="15 mm" HorizontalAlignment="Left" Width="118"/>
        </ComboBox>

    </Grid>
</Window>
